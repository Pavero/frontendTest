.libra
  padding 0 15px
  padding-top 100px
  padding-bottom 194px
  display flex
  flex-direction column
  align-items center

  &__tagline
    margin 0
    margin-bottom 25px
    width 777px

    font-family "Exo2", "Arial", sans-serif
    font-weight 400
    font-size 30px
    line-height 48px
    text-align center

  &__menu
    margin 0
    margin-bottom 39px

  &__slider
    position relative

    width 100%
    max-width 1266px
    min-height 200px
    margin-bottom 51px
    padding 0 50px

  &__slider-btn
    position absolute
    top 34.54%
    z-index 1

    width 30px
    height 103px
    padding 0

    border none
    background-color transparent
    background-repeat no-repeat
    background-size cover

    cursor pointer
    outline none

    &:hover,
    &:focus
      opacity 0.85

    &:active
      opacity 0.7

    &--prev
      left 0
      background-image url("../img/arrow-prev-btn.svg")

    &--next
      right 0
      background-image url("../img/arrow-next-btn.svg")

  &__item p
    padding 0 15px
    line-height 1.2em
    text-transform uppercase

  &__advantages
    width 100%
    max-width 1010px
    margin 0
    margin-bottom 42px
    padding 0
    padding-top 133px
    display flex
    justify-content space-between

    list-style none

  &__advantages-item
    position relative

    width 268px
    margin 0

    font-family "Exo2", "Arial", sans-serif
    font-weight 400
    font-size 18px
    line-height 24px
    color #424852
    text-align center

    &::before,
    &::after
      content ""
      position absolute
      top -133px
      left 50%

      width 108px
      height 108px

      transform translateX(-50%)

    &::before
      background-color #f2f6fa
      border-radius 50%
      border 2px solid #5559a1
      box-shadow:
        inset 0 0 0 6px #ffffff,
        inset 0 0 0 7px #d1dbe4

    &::after
      background-repeat no-repeat
      background-position 50% 50%

    &--installation::after
      background-image url(../img/installation.svg)

    &--temperature::after
      background-image url(../img/temperature.svg)

    &--lightning::after
      background-image url(../img/lightning.svg)
