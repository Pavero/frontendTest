.modal
  position fixed
  top 50%
  left 50%

  display none
  width 50%
  padding-top 30px
  padding-bottom 30px

  background-color #dfdfdf

  transform translate(-50%, -50%)

  &__text
    margin 0 auto
    margin-bottom 30px

    font-family "Exo2", "Arial", sans-serif
    font-weight bold
    font-size 25px
    line-height 30px
    text-transform uppercase
    text-align center

  &__btn
    margin 0 auto

  &--success &__text
    color green

  &--error &__text
    color red
