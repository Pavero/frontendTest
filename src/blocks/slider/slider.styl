.slider
  width 100%
  max-width 1266px
  min-height 200px

  &__wrapper
    position relative
    padding 0 30px

  &__btn
    position absolute
    top 34.54%
    z-index 1

    width 30px
    height 103px
    padding 0

    border none
    background-color transparent
    background-repeat no-repeat
    background-size cover

    cursor pointer
    outline none

    &:hover,
    &:focus
      opacity 0.85

    &:active
      opacity 0.7

    &--prev
      left 0
      background-image url("../img/arrow-prev-btn.svg")

    &--next
      right 0
      background-image url("../img/arrow-next-btn.svg")

  &__item p
    padding 0 15px
    line-height 1.2em
    text-transform uppercase
