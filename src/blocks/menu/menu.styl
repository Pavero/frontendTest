.menu
  display flex
  flex-wrap wrap

  list-style none

  &__item:not(:last-child)
    margin-right 46px

  &__link
    position relative
    display block

    font-family "Exo2", "Arial", sans-serif
    font-weight 400
    font-size 18px
    line-height 48px
    color #64828c

    cursor pointer

    &::after
      content ""
      position absolute
      bottom 13px
      left 0

      width 100%
      height 1px

      background-color #8199a1

    &--active
      font-weight 700
      color #426794

      &::after
        background-color transparent
