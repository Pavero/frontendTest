.btn
  display block
  padding 12px 40px

  font-family "Exo2", "Arial", sans-serif
  font-weight 400
  font-size 24px
  line-height 30px
  color #ffffff
  text-transform uppercase

  background-color #c03f36
  border 4px solid #c03f36
  border-radius 5px
  box-shadow inset 0 0 0 2px #ffffff
  cursor pointer
  outline none

  &:hover,
  &:focus
    opacity 0.85

  &:active
    opacity 0.7
